<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fun.dashboardanimation.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/dial" />

        <ImageView
            android:id="@+id/iv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dashboard"
            android:layout_alignLeft="@+id/iv_dashboard"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/dail_index" />

        <TextView
            android:id="@+id/tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dashboard"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:text="50%"
            android:textColor="@color/baseWhite" />
    </RelativeLayout>

</RelativeLayout>
